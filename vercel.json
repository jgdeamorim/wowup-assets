{
  "rewrites": [
    { "source": "/worker/(.*)", "destination": "/public/worker/$1" },
    { "source": "/custom.css", "destination": "/public/worker/custom.css" },
    { "source": "/custom.js", "destination": "/public/worker/custom.js" }
  ],
  "headers": [
    {
      "source": "/worker/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "max-age=3600" }
      ]
    },
    {
      "source": "/custom.(css|js)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Cache-Control", "value": "max-age=3600" }
      ]
    }
  ]
}
